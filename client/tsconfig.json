{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~*": [ "src/*" ],
      "@/*": [ "src/*" ], // Add this module's alias in parent
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
, "src/components/exam_question/Question.jsx"  ],
  "exclude": [
    "node_modules"
  ]
}
